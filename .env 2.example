# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Server Port
PORT=3000

# JWT Secret for authentication (REQUIRED - Generate a secure random string)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here
SECRET_KEY=your-backup-secret-key-here

# Google Ads API Configuration (REQUIRED for Google Ads functionality)
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your-login-customer-id
GOOGLE_ADS_READ_ONLY=true
GOOGLE_ADS_REFRESH_TOKEN=your-google-ads-refresh-token
GOOGLE_ADS_USE_PROTO_PLUS=True

# OpenRouter API Key (REQUIRED for AI features)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here
